<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_marginBottom="5dp"
    android:layout_marginTop="2dp"
    android:layout_height="wrap_content"
    android:background="@android:color/white"

    android:orientation="vertical">
<ImageView
    android:layout_marginTop="10dp"
    android:layout_width="350dp"
    android:layout_height="250dp"
    android:layout_gravity="center_horizontal"
    android:src="@drawable/ic_account"
    android:id="@+id/singlepolicepicture"
    />
    <TextView
        android:layout_marginTop="5dp"
        android:paddingEnd="12dp"
        android:paddingStart="12dp"
        android:background="#75F2F2"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="police id"
        android:textSize="20dp"
        android:textColor="#000"
        android:textStyle="bold"
        android:layout_gravity="center_horizontal"
        android:id="@+id/singlepoliceid"/>
    <TextView
        android:paddingEnd="12dp"
        android:paddingStart="12dp"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        android:layout_width="match_parent"
        android:layout_gravity="center_horizontal"
        android:textStyle="bold"
        android:textColor="#000"
        android:layout_height="wrap_content"
        android:hint="police name"
        android:textSize="20dp"
        android:id="@+id/singlepolicename"/>
    <TextView
        android:background="#75F2F2"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        android:paddingEnd="12dp"
        android:paddingStart="12dp"
        android:layout_width="match_parent"
        android:layout_gravity="center_horizontal"
        android:textStyle="bold"
        android:textColor="#000"
        android:layout_height="wrap_content"
        android:hint="police designation"
        android:textSize="20dp"
        android:id="@+id/singlepolicedesignation"/>
    <TextView
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        android:paddingEnd="12dp"
        android:paddingStart="12dp"
        android:layout_width="match_parent"
        android:layout_gravity="center_horizontal"
        android:textStyle="bold"
        android:textColor="#000"
        android:layout_height="wrap_content"
        android:hint="police station"
        android:textSize="20dp"
        android:id="@+id/singlepolicestation"/>
    <TextView
        android:background="#75F2F2"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        android:paddingEnd="12dp"
        android:paddingStart="12dp"
        android:layout_width="match_parent"
        android:layout_gravity="center_horizontal"
        android:textStyle="bold"
        android:textColor="#000"
        android:layout_height="wrap_content"
        android:hint="police email"
        android:textSize="20dp"
        android:id="@+id/singlepoliceemail"/>
    <TextView
        android:paddingEnd="12dp"
        android:paddingStart="12dp"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        android:layout_width="match_parent"
        android:layout_gravity="center_horizontal"
        android:textStyle="bold"
        android:textColor="#000"
        android:layout_height="wrap_content"
        android:hint="police CNIC"
        android:textSize="20dp"
        android:id="@+id/singlepolicecnic"/>
    <TextView
        android:paddingEnd="12dp"
        android:paddingStart="12dp"
        android:background="#75F2F2"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        android:layout_width="match_parent"
        android:layout_gravity="center_horizontal"
        android:textStyle="bold"
        android:textColor="#000"
        android:layout_height="wrap_content"
        android:hint="police phone number"
        android:textSize="20dp"
        android:id="@+id/singlepolicephone"/>
    <TextView
        android:paddingEnd="12dp"
        android:paddingStart="12dp"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        android:layout_width="match_parent"
        android:layout_gravity="center_horizontal"
        android:textStyle="bold"
        android:textColor="#000"
        android:layout_height="wrap_content"
        android:hint="police address"
        android:textSize="20dp"
        android:id="@+id/singlepoliceaddress"/>
    <TextView
        android:background="#75F2F2"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        android:paddingEnd="12dp"
        android:paddingStart="12dp"
        android:layout_width="match_parent"
        android:layout_gravity="center_horizontal"
        android:textStyle="bold"
        android:textColor="#000"
        android:layout_height="wrap_content"
        android:hint="police password"
        android:textSize="20dp"
        android:id="@+id/singlepolicepassword"/>
    <TextView
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        android:paddingEnd="12dp"
        android:paddingStart="12dp"
        android:layout_width="match_parent"
        android:layout_gravity="center_horizontal"
        android:textStyle="bold"
        android:textColor="#000"
        android:layout_height="wrap_content"
        android:hint="police or not"
        android:layout_marginBottom="20dp"
        android:textSize="20dp"
        android:id="@+id/singlepoliceconfirmation"/>



</LinearLayout>