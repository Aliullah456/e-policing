<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="5dp"
    android:background="#fff"
    android:layout_marginTop="2dp">
    <ImageView
        android:layout_marginTop="10dp"
        android:layout_width="350dp"
        android:layout_height="250dp"
        android:layout_gravity="center_horizontal"
        android:src="@drawable/ic_account"
        android:id="@+id/singlewitnesspicture"/>

    <TextView
        android:layout_marginTop="5dp"
        android:paddingEnd="12dp"
        android:paddingStart="12dp"
        android:background="#75F2F2"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        android:layout_width="match_parent"
        android:layout_gravity="center_horizontal"
        android:textStyle="bold"
        android:textColor="#000"
        android:layout_height="wrap_content"
        android:id="@+id/singlewitnessname"
        android:hint="witness name"
        android:textSize="20dp"
        />
    <TextView
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        android:paddingEnd="12dp"
        android:paddingStart="12dp"
        android:layout_width="match_parent"
        android:layout_gravity="center_horizontal"
        android:textStyle="bold"
        android:textColor="#000"
        android:layout_height="wrap_content"
        android:id="@+id/singlewitnessCNIC"
        android:hint="witness CNIC"
        android:textSize="20dp"
        />
    <TextView
        android:background="#75F2F2"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        android:paddingEnd="12dp"
        android:paddingStart="12dp"
        android:layout_width="match_parent"
        android:layout_gravity="center_horizontal"
        android:textStyle="bold"
        android:textColor="#000"
        android:layout_height="wrap_content"
        android:id="@+id/singlewitnessphone"
        android:textSize="20dp"
        android:hint="witness phone number"
        />
    <TextView
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        android:paddingEnd="12dp"
        android:paddingStart="12dp"
        android:layout_width="match_parent"
        android:layout_gravity="center_horizontal"
        android:textStyle="bold"
        android:textColor="#000"
        android:layout_height="wrap_content"
        android:id="@+id/singlewitnessaddress"
        android:textSize="20dp"
        android:hint="witness address " />

    <TextView
        android:background="#75F2F2"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        android:paddingEnd="12dp"
        android:paddingStart="12dp"
        android:layout_width="match_parent"
        android:layout_gravity="center_horizontal"
        android:textStyle="bold"
        android:textColor="#000"
        android:layout_height="wrap_content"
        android:id="@+id/singlewitnessage"
        android:hint="witness age"
        android:textSize="20dp"
        />
    <TextView
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        android:paddingEnd="12dp"
        android:paddingStart="12dp"
        android:layout_width="match_parent"
        android:layout_gravity="center_horizontal"
        android:textStyle="bold"
        android:textColor="#000"
        android:layout_height="wrap_content"
        android:id="@+id/singlewitnesscomplaint"
        android:hint="complaint id "
        android:textSize="20dp"
        />
    <Button
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="Delete"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="20dp"
        android:id="@+id/signlewitnessdeletebtn"
        android:layout_gravity="center_horizontal"
        android:textColor="@android:color/white"
        android:background="@drawable/button_rounded_red"/>
</LinearLayout>