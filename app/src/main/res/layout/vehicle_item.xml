<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#fff"
    android:layout_marginBottom="5dp"
    android:layout_marginTop="2dp"
    >
    <TextView
        android:layout_marginTop="10dp"
        android:paddingEnd="12dp"
        android:paddingStart="12dp"
        android:background="#75F2F2"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        android:layout_width="match_parent"
        android:layout_gravity="center_horizontal"
        android:textStyle="bold"
        android:textColor="#000"
        android:layout_height="wrap_content"
        android:id="@+id/singlevehicleplatenumbertxt"
        />
    <TextView
        android:paddingEnd="12dp"
        android:paddingStart="12dp"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        android:layout_width="match_parent"
        android:layout_gravity="center_horizontal"
        android:textStyle="bold"
        android:textColor="#000"
        android:layout_height="wrap_content"
        android:id="@+id/singlevehicleownernametxt"
        />
    <TextView
        android:paddingEnd="12dp"
        android:paddingStart="12dp"
        android:background="#75F2F2"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        android:layout_width="match_parent"
        android:layout_gravity="center_horizontal"
        android:textStyle="bold"
        android:textColor="#000"
        android:layout_height="wrap_content"
        android:id="@+id/singlevehicleownerfathertxt"
        />
    <TextView
        android:paddingEnd="12dp"
        android:paddingStart="12dp"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        android:layout_width="match_parent"
        android:layout_gravity="center_horizontal"
        android:textStyle="bold"
        android:textColor="#000"
        android:layout_height="wrap_content"
        android:id="@+id/singlevehicleownercitytxt"
        />
    <TextView
        android:paddingEnd="12dp"
        android:paddingStart="12dp"
        android:background="#75F2F2"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        android:layout_width="match_parent"
        android:layout_gravity="center_horizontal"
        android:textStyle="bold"
        android:textColor="#000"
        android:layout_height="wrap_content"
        android:id="@+id/singlevehiclemakenametxt"
        />
    <TextView
        android:paddingEnd="12dp"
        android:paddingStart="12dp"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        android:layout_width="match_parent"
        android:layout_gravity="center_horizontal"
        android:textStyle="bold"
        android:textColor="#000"
        android:layout_height="wrap_content"
        android:id="@+id/singlevehiclemodeltxt"
        />
    <TextView
        android:paddingEnd="12dp"
        android:paddingStart="12dp"
        android:background="#75F2F2"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        android:layout_width="match_parent"
        android:layout_gravity="center_horizontal"
        android:textStyle="bold"
        android:textColor="#000"
        android:layout_height="wrap_content"
        android:id="@+id/singlevehiclecolortxt"
        />
    <TextView
        android:paddingEnd="12dp"
        android:paddingStart="12dp"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        android:layout_width="match_parent"
        android:layout_gravity="center_horizontal"
        android:textStyle="bold"
        android:textColor="#000"
        android:layout_height="wrap_content"
        android:id="@+id/singlevehiclepricetxt"
        />
    <TextView
        android:paddingEnd="12dp"
        android:paddingStart="12dp"
        android:background="#75F2F2"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        android:layout_width="match_parent"
        android:layout_gravity="center_horizontal"
        android:textStyle="bold"
        android:textColor="#000"
        android:layout_height="wrap_content"
        android:id="@+id/singlevehicleregistration"
        />
    <TextView
        android:paddingEnd="12dp"
        android:paddingStart="12dp"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        android:layout_width="match_parent"
        android:layout_gravity="center_horizontal"
        android:textStyle="bold"
        android:textColor="#000"
        android:layout_height="wrap_content"
        android:id="@+id/singlevehiclechassisnumber"
        />
    <TextView
        android:paddingEnd="12dp"
        android:paddingStart="12dp"
        android:background="#75F2F2"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        android:layout_width="match_parent"
        android:layout_gravity="center_horizontal"
        android:textStyle="bold"
        android:textColor="#000"
        android:layout_height="wrap_content"
        android:id="@+id/singlevehicleenginenumber"
        />
    <Button
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="20dp"
        android:background="@drawable/button_rounded_red"
        android:text="Delete"
        android:textColor="@android:color/white"
        android:id="@+id/singledeleteheviclebtn"/>
</LinearLayout>