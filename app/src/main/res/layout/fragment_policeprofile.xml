<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".policeprofileFragment">
    <de.hdodenhof.circleimageview.CircleImageView
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/policeprofilepic"
        android:layout_width="127dp"
        android:layout_height="129dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="36dp"
        android:src="@drawable/ic_account"
        app:civ_border_width="2dp"
        app:civ_border_color="#FF000000"/>
        <TextView
            android:id="@+id/policeemailtextshow"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="28dp"
            android:textAlignment="center"
            android:textStyle="bold"
            android:text="email"
            android:textSize="20dp"
             />

        <Button
            android:id="@+id/changepoliceprofilebtn"
            android:layout_width="350dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="20dp"
            android:layout_height="wrap_content"
            android:background="@drawable/button_rounded_blue"
            android:text="change profile picture"
            android:textColor="@android:color/white"
            android:textStyle="bold"
            />

        <Button
            android:id="@+id/policechangepassbtn"
            style="@style/Widget.AppCompat.Button"
            android:layout_width="350dp"
            android:layout_gravity="center_horizontal"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:background="#FAFAFA"
            android:shadowDx="@dimen/material_emphasis_disabled"
            android:text="Change Password?"
            android:textColor="@android:color/holo_green_dark"
           />

        <EditText
            android:id="@+id/policecpasss"
            android:layout_width="350dp"
            android:background="@drawable/custom_input"
            android:layout_marginTop="10dp"
            android:layout_height="50dp"
            android:hint="Enter User email"
            android:drawablePadding="12dp"
            android:paddingStart="12dp"
            android:paddingEnd="12dp"
            android:drawableStart="@drawable/custom_lock_icon"
            android:inputType="text"
            android:text=""
            android:layout_gravity="center_horizontal"
             />

        <EditText
            android:layout_width="350dp"
            android:background="@drawable/custom_input"
            android:layout_marginTop="40dp"
            android:layout_height="50dp"
            android:layout_marginBottom="10dp"
            android:hint="Enter User email"
            android:drawablePadding="12dp"
            android:paddingStart="12dp"
            android:paddingEnd="12dp"
            android:drawableStart="@drawable/custom_lock_icon"
            android:inputType="text"
            android:text=""
            android:layout_gravity="center_horizontal"
            android:id="@+id/policecpasssagain"

            />
        <Button
            android:id="@+id/policecpasschangebtn"
            android:layout_width="350dp"
            android:layout_height="wrap_content"
            android:background="@drawable/button_rounded_green"
            android:text="Change"
            android:layout_marginTop="20dp"
            android:textColor="@android:color/white"
            android:layout_gravity="center_horizontal"/>

        <Button
            android:id="@+id/policecdeletebtn"
            android:layout_width="350dp"
            android:layout_height="wrap_content"
            android:background="@drawable/button_rounded_red"
            android:text="Delete Account"
            android:layout_marginBottom="10dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="30dp"
            android:textColor="@android:color/white"
             />

</LinearLayout>