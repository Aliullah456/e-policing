<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".evidencemanagementFragment">
    <EditText
        android:id="@+id/evidencesearch"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:hint="Search By Complaint ID here..."
        android:layout_margin="20dp"
        android:background="@drawable/imput_search"
        android:paddingLeft="20dp"
        android:paddingTop="8dp"
        android:paddingBottom="8dp"
        android:drawableRight="@drawable/ic_search"
        android:paddingRight="10dp"
        />
    <androidx.recyclerview.widget.RecyclerView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@android:color/darker_gray"
        android:layout_below="@+id/evidencesearch"
        android:id="@+id/evidencerecyclerview"/>
    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/addevidencefloatingbtn"
        android:background="@color/colorPrimary"
        android:layout_alignParentBottom="true"
        android:src="@drawable/ic_add"
        android:backgroundTint="@color/colorPrimary"
        android:layout_alignParentEnd="true"
        android:layout_margin="25dp"/>
</RelativeLayout>