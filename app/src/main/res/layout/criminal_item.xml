<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="5dp"
    android:layout_marginLeft="5dp"
    android:layout_gravity="center_horizontal"
    android:layout_marginRight="5dp"
    android:layout_marginBottom="5dp"
    android:background="@android:color/white"
    >

            <ImageView
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:layout_width="350dp"
                android:layout_height="250dp"
                android:layout_gravity="center_horizontal"
                android:src="@drawable/ic_account"
                android:id="@+id/singlecriminalpicture"/>

            <TextView
                android:paddingEnd="12dp"
                android:paddingStart="12dp"
                android:background="#75F2F2"
                android:paddingTop="5dp"
                android:paddingBottom="5dp"
                android:layout_width="match_parent"
                android:layout_gravity="center_horizontal"
                android:textStyle="bold"
                android:textColor="#000"
                android:layout_height="wrap_content"
                android:id="@+id/singlecriminalname"
                android:hint="criminal name"
                android:textSize="20dp"
                />
            <TextView
                android:paddingEnd="12dp"
                android:paddingStart="12dp"
                android:paddingTop="5dp"
                android:paddingBottom="5dp"
                android:layout_width="match_parent"
                android:layout_gravity="center_horizontal"
                android:textStyle="bold"
                android:textColor="#000"
                android:layout_height="wrap_content"
                android:id="@+id/singlecriminalCNIC"
                android:hint="criminal CNIC"
                android:textSize="20dp"
                />
            <TextView
                android:paddingEnd="12dp"
                android:paddingStart="12dp"
                android:background="#75F2F2"
                android:paddingTop="5dp"
                android:paddingBottom="5dp"
                android:layout_width="match_parent"
                android:layout_gravity="center_horizontal"
                android:textStyle="bold"
                android:textColor="#000"
                android:layout_height="wrap_content"
                android:id="@+id/singlecriminalphone"
                android:textSize="20dp"
                android:hint="criminal phone number"
                />
            <TextView
                android:paddingEnd="12dp"
                android:paddingStart="12dp"
                android:paddingTop="5dp"
                android:paddingBottom="5dp"
                android:layout_width="match_parent"
                android:layout_gravity="center_horizontal"
                android:textStyle="bold"
                android:textColor="#000"
                android:layout_height="wrap_content"
                android:id="@+id/singlecriminaladdress"
                android:textSize="20dp"
                android:hint="criminal address "
                />
            <TextView
                android:paddingEnd="12dp"
                android:paddingStart="12dp"
                android:background="#75F2F2"
                android:paddingTop="5dp"
                android:paddingBottom="5dp"
                android:layout_width="match_parent"
                android:layout_gravity="center_horizontal"
                android:textStyle="bold"
                android:textColor="#000"
                android:layout_height="wrap_content"
                android:id="@+id/singlecriminalage"
                android:hint="criminal age"
                android:textSize="20dp"
                />
            <TextView
                android:paddingEnd="12dp"
                android:paddingStart="12dp"
                android:paddingTop="5dp"
                android:paddingBottom="5dp"
                android:layout_width="match_parent"
                android:layout_gravity="center_horizontal"
                android:textStyle="bold"
                android:textColor="#000"
                android:layout_height="wrap_content"
                android:id="@+id/singlecriminalcomplaint"
                android:hint="complaint id "
                android:textSize="20dp"
                />
            <Button
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:text="Delete"
                android:textStyle="bold"
                android:id="@+id/signlecriminaldeletebtn"
                android:layout_gravity="center"
                android:textColor="@android:color/white"
                android:background="@drawable/button_rounded_red"
                android:layout_marginBottom="10dp"
                android:layout_marginTop="10dp"/>
</LinearLayout>